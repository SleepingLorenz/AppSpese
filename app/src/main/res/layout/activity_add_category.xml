<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/sfondo"
    tools:context=".AddCategoryActivity" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nuova Categoria"
        android:textColor="#fff"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_margin="20dp"
        android:gravity="top|center"
        android:padding="10dp"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_corner"
        android:layout_margin="10dp"
        android:padding="10dp">

        <EditText
            android:id="@+id/nomeCategoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#000"
            android:textColorHint="#808080"
            android:hint="Nome Categoria"
            android:padding="10dp"
            android:background="@color/bgTextView"
            android:layout_margin="10dp"/>

        <include
            layout="@layout/color_picker"/>

    </LinearLayout>


    <Button
        android:id="@+id/addNewCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/round_corner_btn"
        android:text="AGGIUNGI CATEGORIA"
        android:textColor="#000000" />

</LinearLayout>