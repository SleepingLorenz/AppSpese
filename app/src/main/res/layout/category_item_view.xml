<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relLayoutCategoryItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/rounded_corner"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dataTitleCatView"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/idCatView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#fff"
            android:textSize="25dp"
            tools:text="ID"
            />

        <TextView
            android:id="@+id/nomeCatView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="#fff"
            android:textSize="25dp"
            android:gravity="left"
            tools:text="Titolo"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dataHex1CatView"
        android:layout_below="@id/dataTitleCatView"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/hex1CatView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#fff"
            android:textSize="15dp"
            tools:text="HEX 1" />

        <View
            android:id="@+id/color1CatView"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dataHex2CatView"
        android:layout_below="@id/dataHex1CatView"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/hex2CatView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#fff"
            android:textSize="15dp"
            tools:text="HEX 2" />

        <View
            android:id="@+id/color2CatView"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            />
    </LinearLayout>
</RelativeLayout>