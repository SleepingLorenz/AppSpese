<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relLayoutSpesaItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/rounded_corner"
    xmlns:tools="http://schemas.android.com/tools"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/testata"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titleoutput"
            android:layout_width="286dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#fff"
            android:textSize="25dp"
            android:gravity="left"
            tools:text="Titolo"
            />

        <TextView
            android:id="@+id/priceoutput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="#fff"
            android:textSize="25dp"
            android:gravity="right"
            tools:text="20,00" />

    </LinearLayout>

    <TextView
        android:id="@+id/descoutput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/testata"
        android:gravity="left"
        android:textColor="#fff"
        android:textSize="15dp"
        tools:text="Descrizione" />

    <TextView
        android:id="@+id/dataoutput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/descoutput"
        android:gravity="right"
        android:textColor="#fff"
        android:textSize="10dp"
        tools:text="20/20/2022" />

</RelativeLayout>