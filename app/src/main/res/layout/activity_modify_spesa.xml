<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/sfondo"
    tools:context=".AddSpesaActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvNuovaSpesa"
        android:text="Modifica Spesa"
        android:textColor="#fff"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_margin="20dp"
        android:gravity="top|center"
        android:padding="50dp"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_corner"
        android:layout_margin="10dp"
        android:padding="10dp">

        <EditText
            android:id="@+id/modTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#000"
            android:textColorHint="#808080"
            android:hint="Titolo"
            android:padding="10dp"
            android:background="@color/bgTextView"
            android:layout_margin="10dp"/>

        <EditText
            android:id="@+id/modDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bgTextView"
            android:textSize="15dp"
            android:textColor="#000"
            android:textColorHint="#808080"
            android:hint="Descrizione"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:lines="3"
            android:gravity="top"
            />

        <EditText
            android:id="@+id/modPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bgTextView"
            android:textSize="15dp"
            android:textColor="#000"
            android:textColorHint="#808080"
            android:hint="Prezzo"
            android:padding="10dp"
            android:inputType="numberDecimal"
            android:layout_margin="10dp"
            />

            <EditText
                android:id="@+id/modDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bgTextView"
                android:textSize="15dp"
                android:textColor="#000"
                android:textColorHint="#808080"
                android:hint="Data"
                android:padding="10dp"
                android:inputType="datetime"
                android:layout_margin="10dp"
                />


    </LinearLayout>


    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/round_corner_btn"
        android:text="SALVA"
        android:textColor="#000000" />


</LinearLayout>