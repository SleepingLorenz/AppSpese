<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/sfondo"
    tools:context=".AddSpesaActivity"
>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvNuovaSpesa"
        android:text="Nuova Spesa"
        android:textColor="#fff"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_margin="20dp"
        android:gravity="top|center"
        android:padding="50dp"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_corner"
        android:layout_margin="10dp"
        android:padding="10dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#000"
            android:textColorHint="#808080"
            android:hint="Titolo"
            android:padding="10dp"
            android:id="@+id/titleSpesa"
            android:background="@color/bgTextView"
            android:layout_margin="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bgTextView"
            android:textSize="15dp"
            android:textColor="#000"
            android:textColorHint="#808080"
            android:hint="Descrizione"
            android:padding="10dp"
            android:id="@+id/descSpesa"
            android:layout_margin="10dp"
            android:lines="3"
            android:gravity="top"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scegli la Categoria"
            android:textSize="18dp"
            android:layout_margin="10dp"/>

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="@color/white"
            android:autofillHints="Scegli Categoria..."/>


        <EditText
            android:id="@+id/prezzoSpesa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bgTextView"
            android:textSize="15dp"
            android:textColor="#000"
            android:textColorHint="#808080"
            android:hint="Prezzo"
            android:padding="10dp"
            android:inputType="numberDecimal"
            android:layout_margin="10dp"
            />

    </LinearLayout>


    <Button
        android:id="@+id/btnAddSpesa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/round_corner_btn"
        android:text="@string/strBtnAddSpesa"
        android:textColor="#000000" />



</LinearLayout>